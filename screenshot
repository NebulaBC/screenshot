#!/bin/bash
filename="$(date +%d-%b-flameshot)-$RANDOM.png"
gnome-screenshot -a -f /home/neb/Pictures/$filename
curl -H "Content-Type: multipart/form-data" -H "embed: true" -H "authorization: yourtoken" -F file="@/home/neb/Pictures/$filename" https://i.neb.cx/api/upload | jq -r '.files | .[]' | tr -d '\n' | xsel -ib
